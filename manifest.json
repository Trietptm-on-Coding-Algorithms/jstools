{
  "name": "JsTools",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Easy access to many useful Javascript libraries in javascript console.",
  "icons": {
      "16":"icon.ico",
      "48":"icon.ico",
      "128":"icon.ico"
  },
  "browser_action": {
    "default_icon": "icon.ico",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "background": {
    "page": "bg.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery-1.7.2.min.js", "jstools.js"],
	  "run_at": "document_start"
    }
  ]
}
