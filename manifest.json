{
  "name": "JsTools",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Easy access to many useful javascript library",
  "icons": {"16":"icon.png",
            "48":"icon.png",
            "128":"icon.png"},
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "background": {
    "scripts": ["bg.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery-1.7.2.min.js", "jstools.js"],
	  "run_at": "document_start"
    }
  ]
}
